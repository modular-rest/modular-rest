{
	"name": "@modular-rest/server",
	"version": "1.20.0",
	"description": "TypeScript version of a nodejs module based on KOAJS for developing Rest-APIs in a modular solution.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:router": "jest tests/router --runInBand",
		"test:coverage": "jest --coverage --runInBand",
		"play-test": "tsc -p tsconfig.json && node dist/play-test.js",
		"docs": "typedoc --router kind src/index.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/modular-rest/modular-rest.git"
	},
	"keywords": [
		"app",
		"rest",
		"api",
		"koa",
		"typescript"
	],
	"author": "Navid Shad <navidshad72@gmail.com> (http://navid-shad.ir)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/modular-rest/modular-rest/issues"
	},
	"homepage": "https://modular-rest.github.io/modular-rest",
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"colog": "^1.0.4",
		"file-system": "^2.2.2",
		"jsonwebtoken": "^8.5.1",
		"keypair": "^1.0.4",
		"koa": "^2.5.3",
		"koa-body": "6.0.1",
		"koa-mount": "^4.0.0",
		"koa-router": "^7.4.0",
		"koa-static": "^5.0.0",
		"mongoose": "^5.10.9",
		"nested-property": "^4.0.0"
	},
	"devDependencies": {
		"@types/bson": "4.2.0",
		"@types/jest": "30.0.0",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/koa": "^2.14.0",
		"@types/koa-mount": "^4.0.5",
		"@types/koa-router": "^7.4.8",
		"@types/koa-static": "^4.0.4",
		"@types/koa__cors": "^5.0.0",
		"@types/mongoose": "^5.10.5",
		"@types/node": "^20.10.0",
		"jest": "30.2.0",
		"mongodb-memory-server": "11.0.1",
		"supertest": "7.1.4",
		"@types/supertest": "^6.0.2",
		"ts-jest": "29.4.6",
		"typedoc": "^0.28.1",
		"typedoc-plugin-markdown": "^4.6.0",
		"typedoc-plugin-missing-exports": "^4.0.0",
		"typescript": "^5.3.3"
	}
}
